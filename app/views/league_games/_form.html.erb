<%= form_for(@league_game) do |f| %>
  <% if @league_game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@league_game.errors.count, "error") %> prohibited this league_game from being saved:</h2>

      <ul>
      <% @league_game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :game_id %><br>
    <%= collection_select(:league_game, :game_id, Game.order(:title), :id, :title, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :league_night_id %><br>
    <%= collection_select(:league_game, :league_night_id, LeagueNight.all.order("date desc"), :id, :dropdown_title) %> or <%= link_to "Add new game", new_game_path %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
