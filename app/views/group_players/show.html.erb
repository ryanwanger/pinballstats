<p id="notice"><%= notice %></p>

<p>
  <strong>Player:</strong>
  <%= @group_player.player.nickname %>
</p>

<p>
  <strong>Group:</strong>
  <%= @group_player.group.dropdown_title %>

  <ol>
  <% @group_player.group.group_players.each do |player| %>
  	<li><%= player.name %></li>
  <% end %>
  </ol>
</p>



<% if @group_player.group.group_players.count < 4 %>
<%= link_to 'Add another player to group', new_group_player_path(group_id: @group_player.group_id) %>
<% end %>

<% if @group_player.group.group_players.count >= 3 %>
<br/>
<%= link_to 'Create another group', new_group_path %>
<br/>
<%= link_to 'All Groups are complete. Enter scores', next_scores_path %>
<% end %>

<br/><br/>
<%= link_to 'Edit', edit_group_player_path(@group_player) %> |
<%= link_to 'Back', group_players_path %>

